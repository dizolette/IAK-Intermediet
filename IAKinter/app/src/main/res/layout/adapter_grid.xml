<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:background="@drawable/shadow">

        <TextView
            android:id="@+id/text_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="0dp"/>

        <TextView
            android:id="@+id/text_video_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="0dp"/>

        <ImageView
            android:id="@+id/img_image"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/nopreview"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_image"
            android:padding="3dp">
            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:singleLine="true"
                android:layout_marginBottom="0dp"
                android:text="Masalah Perasaan"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_below="@+id/text_title"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#EEE"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/text_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/text_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:textSize="10dp"
                android:text="233 dilihat"/>
            <TextView
                android:id="@+id/text_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_views"
                android:textSize="8dp"
                android:ellipsize="end"
                android:text="Sept, 11 1992"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>